<p id="notice"><%= notice %></p>

<h1>Listing Api Keys</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Mail</th>
      <th>Api key</th>
      <th>Times used</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @api_keys.each do |api_key| %>
      <tr>
        <td><%= api_key.mail %></td>
        <td><%= api_key.api_key %></td>
        <td><%= api_key.times_used %></td>
        <td><%= link_to 'Destroy', api_key, class: "btn btn-danger",  method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Api key', new_api_key_path %>
